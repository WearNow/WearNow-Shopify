<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avatar Customization</title>
    <style>
      /* Add your CSS styles here */
    </style>
  </head>
  <body>
    <div id="myModal" class="modal">
      <div class="modal-content">
        <div class="customization-panel">
          <form id="customizationForm">
            <label for="gender">Select Your Gender</label>
            <select id="gender" name="gender">
              <option value="">Choose one</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>

            <label for="height">Select Your Height & Weight</label>
            <select id="height" name="height">
              <option value="">Choose one</option>
              <option value="short">Short</option>
              <option value="average">Average</option>
              <option value="tall">Tall</option>
            </select>

            <select id="weight" name="weight">
              <option value="">Choose one</option>
              <option value="thin">Thin</option>
              <option value="average">Average</option>
              <option value="overweight">Overweight</option>
            </select>

            <label for="size">Select Your Size & Fit</label>
            <select id="size" name="size">
              <option value="">Choose one</option>
              <option value="small">Small</option>
              <option value="medium">Medium</option>
              <option value="large">Large</option>
            </select>

            <select id="fit" name="fit">
              <option value="">Choose one</option>
              <option value="tight">Tight</option>
              <option value="regular">Regular</option>
              <option value="loose">Loose</option>
            </select>

            <div class="button-container">
              <button type="submit">Continue (1/2)</button>
            </div>
          </form>
        </div>
        <button onclick="closeModal()">Close</button>
      </div>
    </div>

    <!-- Second Modal -->
    <div id="myModal2" class="modal">
      <div class="modal-content">
        <div class="customization-panel">
          <h2>Try-On This Look</h2>
          <form id="customizationForm2">
            <div class="form-group">
              <label for="shoulders">Shoulders</label>
              <select id="shoulders" name="shoulders">
                <option value="">Choose one</option>
                <option value="narrow">Narrow</option>
                <option value="average">Average</option>
                <option value="broad">Broad</option>
              </select>
            </div>

            <div class="form-group">
              <label for="waist">Waist</label>
              <select id="waist" name="waist">
                <option value="">Choose one</option>
                <option value="narrow">Narrow</option>
                <option value="average">Average</option>
                <option value="wide">Wide</option>
              </select>
            </div>

            <div class="form-group">
              <label for="hips">Hips</label>
              <select id="hips" name="hips">
                <option value="">Choose one</option>
                <option value="narrow">Narrow</option>
                <option value="average">Average</option>
                <option value="wide">Wide</option>
              </select>
            </div>

            <div class="form-group">
              <label for="uploadPhoto">Upload One Selfie</label>
              <input type="file" id="uploadPhoto" name="uploadPhoto" accept="image/*">
            </div>

            <div class="button-container">
              <button type="submit">Continue (2/2)</button>
            </div>
          </form>
          <button onclick="closeModal2()">Close</button>
        </div>
      </div>
    </div>

    <!-- Third Modal -->
    <div id="myModal3" class="modal">
      <div class="modal-content">
        <div class="customization-panel">
          <h2>We're creating your look!</h2>
          <p>Please wait...</p>
          <!-- Add any additional content you want here -->
        </div>
      </div>
    </div>

    <!-- Fourth Modal -->
    <div id="myModal4" class="modal">
      <div class="modal-content">
        <div class="customization-panel">
          <h2>Your Suggested Size</h2>
          <!-- Display the data here -->
          <div id="sizeResults"></div>
          <button onclick="closeModal4()">Close</button>
        </div>
      </div>
    </div>

    <!-- Button to open the first modal -->
    <button onclick="openModal()">Open Modal</button>

    <script>
      // Object to store the selected data from all forms
      var selectedData = {};

      // Open the first modal
      function openModal() {
        document.getElementById('myModal').style.display = 'block';
      }

      // Close the first modal and save the data
      function closeModal() {
        selectedData.gender = document.getElementById('gender').value;
        selectedData.height = document.getElementById('height').value;
        selectedData.weight = document.getElementById('weight').value;
        selectedData.size = document.getElementById('size').value;
        selectedData.fit = document.getElementById('fit').value;
        document.getElementById('myModal').style.display = 'none';
      }

      // Open the second modal
      function openModal2() {
        document.getElementById('myModal2').style.display = 'block';
      }

      // Close the second modal and save the data
      function closeModal2() {
        selectedData.shoulders = document.getElementById('shoulders').value;
        selectedData.waist = document.getElementById('waist').value;
        selectedData.hips = document.getElementById('hips').value;
        document.getElementById('myModal2').style.display = 'none';
      }

      // Open the third modal
      function openModal3() {
        document.getElementById('myModal3').style.display = 'block';
        // Set a timeout to close the third modal and open the fourth after 5 seconds
        setTimeout(function () {
          closeModal3();
          openModal4();
          displaySelectedData(); // Display the data in the fourth modal
        }, 3000);
      }

      // Close the third modal
      function closeModal3() {
        document.getElementById('myModal3').style.display = 'none';
      }

      // Open the fourth modal
      function openModal4() {
        document.getElementById('myModal4').style.display = 'block';
      }

      // Close the fourth modal
      function closeModal4() {
        document.getElementById('myModal4').style.display = 'none';
      }

      // Display the collected data in the fourth modal
      function displaySelectedData() {
        var resultsContainer = document.getElementById('sizeResults');
        resultsContainer.innerHTML =
          '<p>Gender: ' +
          selectedData.gender +
          '</p>' +
          '<p>Height: ' +
          selectedData.height +
          '</p>' +
          '<p>Weight: ' +
          selectedData.weight +
          '</p>' +
          '<p>Size: ' +
          selectedData.size +
          '</p>' +
          '<p>Fit: ' +
          selectedData.fit +
          '</p>' +
          '<p>Shoulders: ' +
          selectedData.shoulders +
          '</p>' +
          '<p>Waist: ' +
          selectedData.waist +
          '</p>' +
          '<p>Hips: ' +
          selectedData.hips +
          '</p>';
      }

      // Event listener for the first form submission
      document.getElementById('customizationForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent the default form submission
        closeModal();
        openModal2(); // Transition to the second modal
      });

      // Event listener for the second form submission
      document.getElementById('customizationForm2').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent the default form submission
        closeModal2();
        openModal3(); // Transition to the third modal
      });

    </script>


    
  </body>
</html>
